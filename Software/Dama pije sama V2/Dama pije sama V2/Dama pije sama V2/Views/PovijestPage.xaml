<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dama_pije_sama_V2.PovijestPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame HasShadow="False" BorderColor="White">
                <StackLayout>
                    <Label Text="Povijest" TextColor="Purple" FontSize="24" FontFamily="Spicy Rice" CharacterSpacing="0.35"/>
                    <BoxView Color="#000" HeightRequest="2"/>
                </StackLayout>
            </Frame>
            <ScrollView VerticalOptions="FillAndExpand" BackgroundColor="White" HorizontalOptions="CenterAndExpand" 
                        WidthRequest="360" x:Name="IgreScrollView" IsClippedToBounds="True" VerticalScrollBarVisibility="Always">
                <StackLayout Padding="0, 0, 0, 15" x:Name="IgreStackLayout">

                </StackLayout>
            </ScrollView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>